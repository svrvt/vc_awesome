  vcsh clone https://github.com/svrvt/vc_awesome.git &&
  git -C ~/.config/awesome-worron remote add worron https://github.com/worron/awesome-config.git &&
  git -C ~/.config/awesome-worron remote add worron-rakanalh https://github.com/rakanalh/awesome-config.git &&
  git -C ~/.config/awesome-rice remote add rice https://github.com/kosorin/awesome-rice.git &&

[~/src/build/awesome]
